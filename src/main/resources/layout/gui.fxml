<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.univr.mokamintminer.gui.GUIController"
      spacing="16"
      style="-fx-background-color: #FFFFFF;">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <Label text="Mokamint Desktop Miner"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #212121;"
           alignment="CENTER"/>

    <HBox spacing="12">
        <Label text="Endpoint:" style="-fx-font-size: 16px; -fx-text-fill: #212121;"/>
        <TextField fx:id="endpointField"
                   promptText="es: http://localhost:8033"
                   style="-fx-font-size: 16px; -fx-pref-width: 300px;" />
    </HBox>

    <Button text="Create miner"
            fx:id="btnCreateMiner"
            onAction="#onCreateMiner"
            style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8px;"
            maxWidth="Infinity"/>

    <Label fx:id="statusLabel"
           text="Status: waiting..."
           style="-fx-font-size: 14px; -fx-text-fill: #616161;"
           wrapText="true" />
</VBox>